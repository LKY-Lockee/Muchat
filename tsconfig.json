{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"skipLibCheck": true,
		"types": [
			"vite/client"
		],
		"baseUrl": ".",
		"paths": {
			"@/*": [
				"src/*"
			],
			"&/*": [
				"shared/*"
			],
			"#/*": [
				"electron/*"
			]
		},
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "preserve",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"strict": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"electron/**/*.ts",
		"electron/**/*.tsx",
		"electron/**/*.vue",
		"shared/**/*.ts",
		"shared/**/*.tsx",
		"shared/**/*.vue"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}